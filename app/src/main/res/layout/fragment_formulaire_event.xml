<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    tools:context="com.example.benjamin.mapmove.FormulaireEventFragment"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etNameEvent"
        android:textAlignment="center"
        android:hint="Nom de l'evenement" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:srcCompat="@mipmap/add_btn"
        android:id="@+id/ibSelectImage" />

    <EditText
        android:id="@+id/addressEdit"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:minLines="4"
        android:hint="Address"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etDescription"
        android:textAlignment="center"
        android:layout_weight="0.36"
        android:hint="Description" />



    <Button
        android:text="CrÃ©er l'evenement"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:id="@+id/bCreerEvent"
        android:onClick="onButtonClicked"/>



    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionButton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5.38">



    </LinearLayout>

</LinearLayout>
